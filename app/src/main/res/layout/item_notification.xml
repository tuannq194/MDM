<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white_border_10"
    android:padding="8dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/noti_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/averta_std_cy_regular_3"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="14dp"
            tools:text="Thời gian: 17/03/2023" />

        <TextView
            android:id="@+id/noti_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/averta_std_cy_regular_3"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="14dp"
            tools:text="Nội dung: Thiết bị abc đã được báo hỏng. Mức độ quan trọng: " />

        <TextView
            android:id="@+id/noti_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/averta_std_cy_regular_3"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="14dp"
            tools:text="Người gửi: Admin" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>